{
	"compilerOptions": {
		"target": "ES2022",
		"module": "preserve", // 原 NODE16 导致使用 color-pen 包错
		"moduleResolution": "bundler", // 使用 Node.js 模块解析 
		"esModuleInterop": true, // 允许 import * as  / import default
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules/"
	]
}